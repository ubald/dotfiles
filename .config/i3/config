bindsym $mod+Shift+6 move container to workspace number 6:Web
bindsym $mod+Shift+7 move container to workspace number 7:Media
bindsym $mod+Shift+8 move container to workspace number 8:Comms
bindsym $mod+Shift+9 move container to workspace number 9
